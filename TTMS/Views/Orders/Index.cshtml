@model IEnumerable<TTMS.Models.Order>

<script>
        $(document).ready(function () {
            var oTable = $('#tblOrders').dataTable({
                "sPaginationType": "full_numbers"
            });
        });
</script>
<div class="panel-heading">
    <h4>Orders</h4>
    <span class="tools pull-right">
        @Html.ActionLink("New Order", "NewOrder", null, htmlAttributes: new { @class = "btn btn-primary" })
    </span>
</div>
<br /><br />
    <table id="tblOrders" class="display">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Advance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Advance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit",null, new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Cancel", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        <tbody>
</table>
 
